<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <script src="~/js/site.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyDashboardApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        header {
            flex-shrink: 0;
            width: 100%;
        }

        .navbar-dark {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            min-height: 100vh;
            padding-top: 1rem;
        }

            .sidebar .nav-link {
                color: #adb5bd;
            }

                .sidebar .nav-link:hover {
                    color: white;
                    background-color: #495057;
                }

            .sidebar .search-bar {
                margin-bottom: 1rem;
            }

        .content {
            flex-grow: 1;
            padding: 2rem;
        }

        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 1rem;
        }

        .search-input {
            background-color: #495057;
            border: none;
            color: #adb5bd;
        }

            .search-input::placeholder {
                color: #adb5bd;
            }

            .search-input:focus {
                background-color: #343a40;
                color: white;
            }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>

    <header class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Home">MyDashboardApp</a>
            <div class="d-flex">
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>

            </div>
        </div>
    </header>

    <div class="main-content">
        <nav class="sidebar">
            <div class="container-fluid">

                <div class="search-bar">
                    <input type="text" class="form-control search-input" placeholder="Search...">
                </div>

                <!-- Navigasyon Menüsü -->
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard/Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Database/Connect">Connect Database</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard/Create">Create Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard/Index">Dashboards</a>
                    </li>
                </ul>
            </div>
        </nav>


        <div class="content">
            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>


    <footer class="footer text-muted mt-5">
        <p>&copy; 2024 - MyDashboardApp</p>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
